{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"plugin:prettier/recommended",
		"standard-with-typescript",
		"plugin:react/recommended"
	],
	"overrides": [],
	"parserOptions": {
		"project": ["./tsconfig.json"]
	},
	"plugins": ["react"],
	"rules": {
		"semi": 0,
		"@typescript-eslint/semi": "always",
		"react/react-in-jsx-scope": "off",
		"react/jsx-uses-react": "off",
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "all",
				"tabWidth": 12,
				"semi": true,
				"singleQuote": true,
				"bracketSpacing": true,
				"eslintIntegration": true,
				"printWidth": 120
			}
		]
	}
}
